<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGold</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:textSize">22sp</item>
        <item name = "android:textColor">?android:textColorPrimary</item>

    </style>

    <style name="Label" parent="@style/TextStyle">
        <item name ="android:textStyle">bold</item>
    </style>
    
    <style name="Gold" parent="@style/Label">
        <item name ="android:background">?android:colorPrimary</item>
        <item name ="android:textColor">@color/colorBlack</item>
    </style>
    
    <style name="ButtonStyle" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
